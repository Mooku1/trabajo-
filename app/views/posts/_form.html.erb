<%= form_for @post do |f| %>
  <div class="field">
    <%= f.text_field :content, class: 'form-control', placeholder: "What's on your mind?" %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-info btn-block btn-post'%>
  </div>
<% end %>
