<div id="edit" class="container">
 <div class="row">
  <div class="col-sm-12">
   <div class="panel panel-default edit-panel">
    <div class="panel-heading">
     <h1>Edit your profile</h1>
    </div>
     <div class="panel-body form-group">
     <%= form_for (@user, multipart: true) do |f| %>
      <div class="field">
       <%= f.label :name %>
       <%= f.text_field :name, class: 'form-control'%>
      </div>
      <div class="field">
       <%= f.label :email %>
       <%= f.text_field :email, class: 'form-control' %>
      </div>
      <div class="field">
       <%= f.label :experience %>
       <%= f.number_field :experience, class: 'form-control' %>
      </div>
      <div class="field">
       <%= f.label :description %>
       <%= f.text_field :description, class: 'form-control form-big' %>
      </div>
      <div class="field">
       <%= f.label :current_postition %>
       <%= f.text_field :current_position, class: 'form-control' %>
      </div>
      <div class="field">
       <%= f.file_field :avatar, class: 'form-control'%>
      </div>
      <div class="field btn-submit">
      <%= f.submit class: 'btn btn-info btn-block' %>
     </div>
     <% end %>
     <%= link_to 'Destroy', @user, method: :delete, data: { confirm: "yer makin a bad decision" }, class: 'btn btn-danger btn-md' %>
   </div>
  </div>
 </div>
</div>
