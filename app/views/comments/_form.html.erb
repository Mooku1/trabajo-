<%= form_for([@post, @comment]) do |f| %>
  <%= f.hidden_field :post_id, value: @post_id%>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.label :thought %>
  <%= f.text_field :thought, class: 'form-control' %>
  <%= f.submit class: 'btn btn-block btn-primary btn-post' %>
<% end %>
